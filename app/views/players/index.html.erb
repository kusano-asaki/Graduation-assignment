<body id="player-body">
  <div id="player_title">
    <div class="row">
      <h1>プレイヤー一覧</h1>
      <p>自分にあったユーザーを探してみよう！</p>
        <%= render 'search' %>
      <p><%= link_to 'Player 新規登録', new_player_path, class: 'btn' %></p>
      <p class="player_sort"><%= sort_link(@q, :killdeath_point, "#{t('attributes.player.killdeath_point')} sort",  default_order: :desc) %></p>
    </div>
  </div>
  <div class="row">
    <% @players.each do |player| %>
      <ul class="media-list col-md-6">
        <div class="push2">
          <div class="media-left media-image">
            <% if player.legend == "オクタン" %>
              <%= image_path("/assets/オクタンApex Legends_20201001223559.jpg") %>
            <% elsif player.legend == "クリプト" %>
              <%= image_path("/assets/クリプトApex Legends_20201001223639.jpg") %>
            <% elsif player.legend == "コースティック" %>
              <%= image_path("/assets/コースティックApex Legends_20201001223537.jpg") %>
            <% elsif player.legend == "ジブラルタル" %>
              <%= image_path("/assets/ジブラルタルApex Legends_20201001223502.jpg") %>
            <% elsif player.legend == "パスファインダー" %>
              <%= image_path("/assets/パスファインダーApex Legends_20201001223517.jpg") %>
            <% elsif player.legend == "バンガロール" %>
              <%= image_path("/assets/バンガロールApex Legends_20201001223754_1.jpg") %>
            <% elsif player.legend == "ブラッドハウンド" %>
              <%= image_path("/assets/ブラッドハウンドApex Legends_20201001223453.jpg") %>
            <% elsif player.legend == "ミラージュ" %>
              <%= image_path("/assets/ミラージュApex Legends_20201001223543.jpg") %>
            <% elsif player.legend == "ライフライン" %>
              <%= image_path("/assets/ライフラインApex Legends_20201001223805.jpg") %>
            <% elsif player.legend == "ランパート" %>
              <%= image_path("/assets/ランパートApex Legends_20201001223619.jpg") %>
            <% elsif player.legend == "レイス" %>
              <%= image_path("/assets/レイスApex Legends_20201001223522.jpg") %>
            <% elsif player.legend == "レヴナント" %>
              <%= image_path("/assets/レヴナントApex Legends_20201001223635.jpg") %>
            <% elsif player.legend == "ローバ" %>
              <%= image_path("/assets/ローバApex Legends_20201001223627.jpg") %>
            <% elsif player.legend == "ワットソン" %>
              <%= image_path("/assets/ワットソンApex Legends_20201001223603.jpg") %>
            <% else %>
            <% end %>
          </div>
          <div class="media-body">
            <table class="player_list">
              <tr><td class="list_title"><%= t 'attributes.player.user_name'%></td><td><%= player.user.name %></td></tr>
              <tr><td class="list_title"><%= t 'attributes.player.platform'%></td><td><%= player.platform %></td></tr>
              <tr><td class="list_title"><%= t 'attributes.player.rank'%></td><td><%= player.rank %></td></tr>
              <tr><td class="list_title"><%= t 'attributes.player.killdeath_point'%></td><td><%= player.killdeath_point %></td></tr>
              <tr><td class="list_title"><%= t 'attributes.player.play_style'%></td><td><%= player.play_style %></td></tr>
              <tr>
                <td class="list_title"><%= t 'attributes.player.free'%></td>
                <td><details><summary>みる！</summary><p><%= player.free %></p></details></td>
              </tr>
              <tr><td><%= link_to 'プレイヤー詳細', player_path(player), class: 'btn player_btn' %></td><td></td></tr>
            </table>
          </div>
        </div>
      </ul>
    <% end %>
  </div>
  <div class="push"></div>
</body>
