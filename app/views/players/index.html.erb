<h1>プレイヤー一覧</h1>
<div class="form-field">
  <%= search_form_for @q do |f| %>
    <div class="form-group row">
      <%= f.label :legend_eq, t('attributes.player.legend'), class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.select :legend_eq, options_for_select({ オクタン: 0, クリプト: 1, コースティック: 2, ジブラルタル: 3, バンガロール: 4, パスファインダー: 5, ブラッドハウンド: 6,
                                                        ミラージュ: 7, ライフライン: 8, ランパート: 9, レイス: 10, レヴナント: 11, ローバ: 12, ワットソン: 13 }), include_blank: true %>
        </div>
    </div>
    <div class="form-group row">
      <%= f.label :rank_eq, t('attributes.player.rank'), class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.select :rank_eq, options_for_select({ 遊ばない: 0, ブロンズ: 1, シルバー: 2, ゴールド: 3, プラチナ: 4, ダイヤ: 5, マスター＆プレデター: 6 }), include_blank: true %>
        </div>
    </div>
    <div class="form-group row">
      <%= f.label :platform_eq, t('attributes.player.platform'), class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.select :platform_eq, options_for_select({ PS4: 0, PC: 1, Xbox: 2 }), include_blank: true %>
        </div>
    </div>
    <div class="form-group row">
      <%= f.label :time_to_play_eq, t('attributes.player.time_to_play'), class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.select :time_to_play_eq, { AM: '22:00-23:00' }, include_time: true %>
        </div>
    </div>
    <div class="form-group">
      <%= f.submit '検索', class:'btn btn-primary' %>
      <%= link_to 'リセット', players_path, class:'btn btn-primary' %>
    </div>
  <% end %>

<p><%= link_to 'player新規登録', new_player_path, class: 'btn btn-primary' %></p>

<% @players.each do |player| %>
  <ul>
    <div class="legend_image">
      <% if player.legend == "オクタン" %>
      <%= image_tag 'オクタンApex Legends_20201001223559.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "クリプト" %>
      <%= image_tag 'クリプトApex Legends_20201001223639.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "コースティック" %>
      <%= image_tag 'コースティックApex Legends_20201001223537.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "ジブラルタル" %>
      <%= image_tag 'ジブラルタルApex Legends_20201001223502.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "パスファインダー" %>
      <%= image_tag 'パスファインダーApex Legends_20201001223517.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "バンガロール" %>
      <%= image_tag 'バンガロールApex Legends_20201001223754_1.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "ブラッドハウンド" %>
      <%= image_tag 'ブラッドハウンドApex Legends_20201001223453.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "ミラージュ" %>
      <%= image_tag 'ミラージュApex Legends_20201001223543.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "ライフライン" %>
      <%= image_tag 'ライフラインApex Legends_20201001223805.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "ランパート" %>
      <%= image_tag 'ランパートApex Legends_20201001223619.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "レイス" %>
      <%= image_tag 'レイスApex Legends_20201001223522.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "レヴナント" %>
      <%= image_tag 'レヴナントApex Legends_20201001223635.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "ローバ" %>
      <%= image_tag 'ローバApex Legends_20201001223627.jpg', width: '130px', height: '180px' %>
      <% elsif player.legend == "ワットソン" %>
      <%= image_tag 'ワットソンApex Legends_20201001223603.jpg', width: '130px', height: '180px' %>
      <% else %>
      <% end %>
    </div>
    <li><%= t 'attributes.player.user_name'%>:<%= player.user.name %></li>
    <li><%= t 'attributes.player.platform'%>:<%= player.platform %></li>
    <li><%= t 'attributes.player.rank'%>:<%= player.rank %></li>
    <li><%= t 'attributes.player.play_style'%>:<%= player.play_style %></li>
    <li><%= t 'attributes.player.free'%>:<%= player.free %></li>
    <%= link_to 'プレイヤー詳細', player_path(player), class: 'btn btn-primary' %>
  </ul>
<% end %>
