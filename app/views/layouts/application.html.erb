<!DOCTYPE html>
<html>
  <head>
    <title>APTeamFactory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
      <%= link_to 'APTeamFactory', root_path, class: 'navbar-brand' %>
        </div>
        <nav>
          <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
            <% if current_user %>
              <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
              <li><%= link_to 'ログアウト', session_path(current_user.id), method: :delete %></li>
            <% else %>
              <li><%= link_to t('contents.link.login'), new_session_path %></li>
              <li><%= link_to 'サインアップ', new_user_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
      </header>

    <div class="container">
      <div id="alert_form">
        <% flash.each do |key, value| %>
          <div class="alert alert-info">
            <%= content_tag(:div, value, class: "#{key}") %>
          </div>
        <% end %>
      </div>
    <%= yield %>
  </div>
  <footer>
    <p id="footer_text">@2020 kusano</p>
  </footer>
  </body>
</html>
