<!DOCTYPE html>
<html>
  <head>
    <title>APTeamFactory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="app-title navbar navbar-expand-md navbar-light bg-light">
      <%= link_to 'APTeamFactory', root_path, class: 'navbar-brand' %>
      <ul class="navbar-nav ml-auto">
        <% if current_user %>
          <li class="nav-item"><%= link_to 'マイページ', user_path(current_user.id) %></li>
          <li class="nav-item"><%= link_to 'ログアウト', session_path(current_user.id), method: :delete %></li>
        <% else %>
          <li class="nav-item"><%= link_to 'ログイン', new_session_path %></li>
          <li class="nav-item"><%= link_to 'サインアップ', new_user_path %></li>
        <% end %>
      </ul>
    </nav>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-info">
          <%= content_tag(:div, value, class: "#{key}") %>
        </div>
      <% end %>
    <%= yield %>
  </div>
  </body>
</html>
